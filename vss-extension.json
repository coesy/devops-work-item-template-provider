{
    "manifestVersion": 1,
    "id": "devops-work-item-template-provider",
    "publisher": "CodeBoost",
    "version": "0.0.58",
    "name": "Devops work item template provider",
    "description": "Inserts child tasks on a work item as according to templates",
    "public": false,
    "categories": ["Azure Boards"],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scopes": [
        "vso.work_full",
        "vso.code_write",
        "vso.build_execute"
    ],
    "content": {
        "details": {
            "path": "readme.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/coesy/devops-work-item-template-provider"
    },
    "contributions": [
        {
            "id": "embdeddedInWorkItemForm",
            "type": "ms.vss-work-web.work-item-form-control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Work Item Template Provider",
                "uri": "index.html",
                "height": 600
            }
        },
        {
            "id": "actionMenu",
            "type": "ms.vss-web.action",
            "description":"Inserts child tasks on a work item according to custom templates",
            "targets": [
                "ms.vss-work-web.backlog-item-menu",
                "ms.vss-work-web.backlog-board-card-item-menu",
                "ms.vss-work-web.work-item-toolbar-menu", 
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "text": "Add WorkItem Child Items",
                "title": "Add Child Items from a custom template",
                "icon": "./images/computer-repair-icon.png",
                "uri": "index.html"
            }
        }
    ],
    "files": [
        {
            "path": "dist/index.html",
            "addressable": true,
            "packagePath": "index.html"
        },
        {
            "path": "dist/scripts/app.js",
            "addressable": true,
            "packagePath": "scripts/app.js"
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "dist"
        }
    ]
}